{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "BasicPresenceSchema",
    "type": "object",
    "properties": {
        "basicPresence": {
            "type": "object",
            "properties": {
                "availability": {
                    "type": "string",
                    "enum": [
                        "availableToPlay",
                        "unavailable"
                    ]
                },
                "lastAvailableDate": {
                    "type": "string",
                    "format": "date-time"
                },
                "primaryPlatformInfo": {
                    "type": "object",
                    "properties": {
                        "onlineStatus": {
                            "type": "string",
                            "enum": [
                                "online",
                                "offline"
                            ]
                        },
                        "platform": {
                            "type": "string"
                        },
                        "lastOnlineDate": {
                            "type": "string",
                            "format": "date-time"
                        }
                    },
                    "required": [
                        "onlineStatus",
                        "platform"
                    ],
                    "additionalProperties": false
                },
                "gameTitleInfoList": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "format": {
                                "type": "string"
                            },
                            "gameStatus": {
                                "type": "string"
                            },
                            "launchPlatform": {
                                "type": "string"
                            },
                            "npTitleIconUrl": {
                                "type": "string",
                                "format": "uri"
                            },
                            "npTitleId": {
                                "type": "string"
                            },
                            "titleName": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "format",
                            "gameStatus",
                            "launchPlatform",
                            "npTitleIconUrl",
                            "npTitleId",
                            "titleName"
                        ],
                        "additionalProperties": false
                    }
                }
            },
            "required": [
                "availability",
                "primaryPlatformInfo"
            ],
            "additionalProperties": false,
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "availability": {
                                "const": "unavailable"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "lastAvailableDate"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "availability": {
                                "const": "availableToPlay"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "gameTitleInfoList"
                        ]
                    }
                }
            ]
        }
    },
    "required": [
        "basicPresence"
    ],
    "additionalProperties": false
}
